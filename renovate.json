{
    "extends": [
        "config:base"
    ],
    "prConcurrentLimit": 10,
    "timezone": "utc",
    "schedule": [
        "after 5:00 am before 11:00 am"
    ],
    "pre-commit": {
        "enabled": true
    },
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchUpdateTypes": [
                "major",
                "minor",
                "patch"
            ],
            "automerge": true,
            "automergeType": "branch",
            "rebaseWhen": "behind-base-branch"
        },
        {
            "matchManagers": [
                "dockerfile"
            ],
            "matchUpdateTypes": [
                "digest"
            ],
            "automerge": true,
            "automergeType": "branch",
            "rebaseWhen": "behind-base-branch",
            "schedule": [
                "after 3:00 am before 5:00 am on Tuesday every 2 weeks starting on the 1st week of the year"
            ]
        },
        {
            "matchManagers": [
                "jenkins"
            ],
            "matchUpdateTypes": [
                "major",
                "minor",
                "patch"
            ],
            "automerge": true,
            "automergeType": "branch",
            "rebaseWhen": "behind-base-branch"
        }
    ]
}
